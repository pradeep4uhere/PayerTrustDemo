<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="1dp"
        android:paddingRight="20dp"
        android:elevation="8dp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/inr" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTransferTo"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/ubuntu_medium"
                        android:padding="1dp"
                        android:text="Transfer To Shukhveer"
                        android:textFontWeight="1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtTransferFrom"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/ubuntu_medium"
                        android:padding="1dp"
                        android:text="From Pradeep Kumar (9015446567)"
                        android:textFontWeight="1"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/txtRefNo"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/ubuntu_medium"
                        android:padding="1dp"
                        android:text="Ref No:202120120021 on 8:00AM"
                        android:textFontWeight="1"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtAmount"
                        android:layout_width="127dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_bold"
                        android:text="- 275043.00"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:textColor="#ff0000"
                        android:textSize="16sp"
                        android:paddingRight="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtStatus"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_bold"
                        android:gravity="end"
                        android:text="Success"
                        android:textColor="#2AA32F"
                        android:textSize="10sp"
                        android:paddingRight="20dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/txtDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="12th Dec 2021"
                        android:gravity="end"
                        android:textSize="10sp"
                        android:paddingRight="10dp"
                        android:layout_gravity="end"
                        />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/txtWalletBalance"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="Wallet Balance: Rs. 2,55,980.00" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="View More"
                    android:gravity="end"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/right_24"
                    />
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>