<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/password1"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="#fff"
android:orientation="vertical"
tools:context=".RestPasswordSuccess">


<ImageView
    android:id="@+id/logo_image"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_gravity="center_vertical"
    android:layout_marginStart="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="100dp"
    android:contentDescription="TODO"
    android:transitionName="logo_image"
    app:srcCompat="@drawable/logo" />

<TextView
    android:id="@+id/logo_text"
    android:layout_width="349dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="1dp"
    android:baselineAligned="false"
    android:fontFamily="@font/bungee"
    android:gravity="center_horizontal|center_vertical"
    android:text="email sent"
    android:textSize="36sp"
    android:transitionName="logo_text" />

<TextView
    android:id="@+id/slogan"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="1dp"
    android:fontFamily="@font/antic"
    android:text="We sent you email, please check and reset your password."
    android:textSize="18dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="746dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/login_back_from_success"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="100dp"
        android:background="#FF6A3B"
        android:elevation="0dp"
        android:text="Back To Login"
        android:textColor="@color/white"
        app:backgroundTint="#FF9800" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:gravity="center_horizontal|center_vertical"
        android:text="www.payertrust.com" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:text="Copyright Â© 2020 PayerTrust. All Rights Reserved." />


</LinearLayout>


</LinearLayout>